{{>silderBar}}
<div class="main-content">
  {{>headerAdmin}}
  <main>
      <table class="table mt-4">
  <thead>
    <tr>
      <th scope="col">STT</th>
      <th scope="col">Mã giảng viên</th>
      <th scope="col">Tên giảng viên</th>
      <th scope="col">Thời gian báo cáo</th>
      <th scope="col">Nội dung báo cáo</th>
      <th scope="col" colspan="2" >Thao tác</th>
    </tr>
  </thead>
  <tbody>
    {{#each members}}
    <tr>
      <th scope="row">{{sum @index 1}}</th>
      <td>{{this.mssv}}</td>
      <td>{{this.phongDk}}</td>
      <td> ngày {{this.ngaySd}}</td>
      <td>{{this.selectReport}} - {{this.textareareport}}</td>
      <td >
        <a href="/admin/reportTeacherManager/{{this._id}}">
            <button type="button" class="btn btn-secondary">Xem chi tiết</button>
        </a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
  </main>
</div>
{{!-- modal duyệt --}}
<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Duyệt yêu cầu thuê máy</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Bạn có chắc chắn muốn duyệt yêu cầu này không ?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
        <button type="button" class="btn btn-primary" id="btnDuyet">Duyệt yêu cầu</button>
      </div>
    </div>
  </div>
</div>
